name: Run E2E Tests

on:
  push:
    branches:
      master

jobs:

  run_tests:

    runs-on: ubuntu-latest

    steps:

      - name: Get sources
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: Installing dependencies
        run: pip install --upgrade pip pytest pytest-httpserver --quiet

      - name: Install module
        run: pip install -e .

      - name: Running tests
        run: pytest e2e
